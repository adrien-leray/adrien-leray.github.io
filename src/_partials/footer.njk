    <ul class="w-full list-none flex justify-center gap-6 mt-10">
        {% for social in socials %}
            <li>
                <a class="transition-all duration-150 hover:ring hover:ring-offset-1 hover:ring-on-background" href="{{social.url}}" target="_blank">{{social.icon}}
